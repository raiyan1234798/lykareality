rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - authenticated users can read/write their own doc
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }

    // Messages (Support Center) - authenticated users can read/write
    match /messages/{chatId} {
      allow read, write: if request.auth != null;

      match /thread/{msgId} {
        allow read, write: if request.auth != null;
      }
    }

    // Support tickets (legacy) - authenticated users can read/write
    match /support_tickets/{ticketId} {
      allow read, write: if request.auth != null;

      match /messages/{msgId} {
        allow read, write: if request.auth != null;
      }
    }

    // Catch-all for other collections during development
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
